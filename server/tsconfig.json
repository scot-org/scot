{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/**/*",
    "index.ts",
  ],
  "exclude": [
    "dist",
    "public",
    "node_modules"
  ],
  "paths": {
    "@config/*": ["src/config/*"],
    "@models/*": ["src/models/*"],
    "@controllers/*": ["src/controllers/*"],
    "@services/*": ["src/services/*"],
  }
}